{{>sidebar}}

<div class="col-8 mx-auto">
  <div class="card">
    <div class="card-header">
      <h2 class="crud-h2" >Editar Producto</h2>
      <div class="card-body">
        <form action="/api/product/update/{{products.id}}?_method=PUT" method="POST">
          <input type="hidden" name="_method" value="PUT">
          <div class="form-group">
            <input type="text" name="breadName" class="form-control" placeholder="nombre pan:" autofocus value="{{products.breadName}}">
          </div>
          <div class="crud-display form-group">
            <input type="text" name="breadFlavor" class="menu-left form-control" placeholder="sabor pan:" value="{{products.breadFlavor}}" >
          </div>
          <div class="crud-display form-group">
            <input type="text" name="breadQuantity" class="form-control" placeholder="cantidad panes:" autofocus value="{{products.breadQuantity}}">
          </div>
          <div class="form-group">
            <input type="text" name="saleStatus" class="form-control" placeholder="estado venta(Vendido o En Venta):" autofocus value="{{products.saleStatus}}">
          </div>
          {{!-- <div class="form-group">
            <input type="text" name="fechaIngresoProducto" class="form-control" placeholder="estado venta:" autofocus value="{{products.created_at}}">
          </div> --}}
          <input class="btn btn-success btn-block" type="submit" value="Actualizar">
        </form>
      </div>
    </div>
  </div>
</div>